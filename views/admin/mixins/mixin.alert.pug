mixin alert-success(time)
  - if(messages.success)
      .message.success   
        div(
          class="alert alert-success"
          show-alert
          data-time=time
        ) #{messages.success} <button close-alert>x</button>

mixin alert-error(time)
  - if(messages.error)
      .message.error   
        div(
          class="alert alert-danger"
          show-alert
          data-time=time
        ) #{messages.error} <button close-alert>x</button>